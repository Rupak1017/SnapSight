<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-black text-white flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-md md:max-w-xl lg:max-w-2xl bg-zinc-900/20 p-6 rounded-xl shadow-xl">
    <div class="flex flex-col items-center gap-6">
      <img class="w-40 md:w-48 lg:w-56" src="/images/snapsight.jpg" alt="SnapSight Logo">
      
      <form class="w-full space-y-4" action="/login" method="post">
        <input class="px-4 py-3 border-2 border-zinc-800 rounded-md w-full bg-zinc-900" type="text" placeholder="username" name="username">
        <input class="px-4 py-3 border-2 border-zinc-800 rounded-md w-full bg-zinc-900" type="password" placeholder="password" name="password">
        <input class="w-full bg-blue-500 px-4 py-3 rounded-md font-semibold hover:bg-blue-600 transition" type="submit" value="Log In">
      </form>

      <span class="text-sm">Don't have an account? <a href="/" class="text-blue-500 hover:underline">Sign Up</a></span>
    </div>
  </div>
</div>
